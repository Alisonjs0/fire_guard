
{
  "name": "unidades",
  "options": {
    "validator": {
      "$jsonSchema": {
        "bsonType": "object",
        "title": "Unidade",
        "description": "Unidades organizacionais (setores, departamentos, etc.)",
        "additionalProperties": true,
        "required": ["nome", "ativo", "creator", "createdAt", "updatedAt"],
        "properties": {
          "nome": {
            "bsonType": "string",
            "minLength": 2,
            "maxLength": 100,
            "description": "Nome da unidade"
          },
          "descricao": {
            "bsonType": "string",
            "maxLength": 500,
            "description": "Descrição da unidade"
          },
          "responsavel": {
            "bsonType": "string",
            "maxLength": 100,
            "description": "Responsável pela unidade"
          },
          "ativo": {
            "bsonType": "bool",
            "description": "Status da unidade (ativo/inativo)"
          },
          "creator": {
            "bsonType": "string",
            "description": "Usuário que criou o registro"
          },
          "createdAt": {
            "bsonType": "string",
            "title": "datetime",
            "description": "Data de criação ISO 8601"
          },
          "updatedAt": {
            "bsonType": "string",
            "title": "datetime",
            "description": "Data de atualização ISO 8601"
          }
        }
      }
    },
    "validationLevel": "moderate",
    "validationAction": "warn"
  }
}
